package com.project.apigateway;

import org.springframework.cloud.gateway.route.RouteLocator;
import org.springframework.cloud.gateway.route.builder.RouteLocatorBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

@Configuration
public class ApiGatewayConfiguration {

	@Bean
	public RouteLocator gatewayRouter(RouteLocatorBuilder builder) {
		
		return builder.routes()
				.route("demo-microservice", 
						r -> r.path("/demo-microservice/**")
                        .and().method("GET")
                        .uri("lb://demo-microservice"))
		        .build();
		
//		return builder.routes()
//				.route(p -> p.path("/demo-microservice/**").uri("lb://demo-microservice"))
//				.route(p -> p.path("/demo-microservice-open-feign/**").uri("lb://demo-microservice-open-feign"))
//				.build();
	}

}